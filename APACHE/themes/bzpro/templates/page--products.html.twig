{% include  "@bzpro/header.html.twig" %}
{{ attach_library('bzpro/bzpro-lib-cubeportfolio') }}

{% set description = node.field_description.value %}
	<div id="home" class="bg-inner low-back-gradient-inner" style="">
	  <div class="text-con-inner low-back-up">
	    <div class="container">
	      <div class="row">
	        <div class="lead col-lg-12 col-xm-12 text-center">
	          <h1><span class="top-heading-inner">{{ title }}</span> </h1>
	          <div class="list-o-i white">
	            <p class="white no-p">{{ description|raw }}</p>
	          </div>
	        </div>
	      </div>
	    </div>
	  </div>
	</div>

	<!--Pagenation -->
	<div class="pagenation-holder">
	  <div class="container">
	    <div class="row">
	      <div class="col-md-6 text-left">
	        <div class="pagenation_links">{{ page.breadcrumb }}</div>
	      </div>
	      <div class="col-md-6"> </div>
	    </div>
	  </div>
	</div>
	<!--END Pagenation --> 

<!-- Blog  -->

{% if products_sidebar == 'left' %}
  <div id="shop-page">
    <div class="container">
      <div class="row">
        <div class="col-md-3"> 
          <!-- START SIDEBAR -->
          <div class="bzshop2">
            <div class="sidebar"> 
              <!-- START WIDGET -->
              {{ page.sidebar }}
            </div>
          </div>
          <!-- END SIDEBAR --> 
        </div>
        <div class="col-md-8 col-md-offset-1">
          <div class="product_list_area">
            <div class="row bzshop">
              {{ page.content }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
{% else %}
  <div id="shop-page">
    <div class="container">
      <div class="row">
       
        <div class="col-md-8 col-md-offset-1">
          <div class="product_list_area">
            <div class="row bzshop">
              {{ page.content }}
            </div>
          </div>
        </div>
         <div class="col-md-3"> 
          <!-- START SIDEBAR -->
          <div class="bzshop2">
            <div class="sidebar"> 
              <!-- START WIDGET -->
              {{ page.sidebar }}
            </div>
          </div>
          <!-- END SIDEBAR --> 
        </div>
      </div>
    </div>
  </div>
  </div>
{% endif %}

<!-- End Blog  --> 

{% if page.section %}
    {{ page.section }}
{% endif %}
 
{% include "@bzpro/footer.html.twig" %}
